<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <TextView
                android:id="@+id/grade_panenan_new"
                android:layout_width="58dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:layout_alignEnd="@+id/satuan_panenan_new"
                android:layout_alignRight="@+id/satuan_panenan_new"
                android:layout_below="@+id/petaniBarangId"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:text="Grade A"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/item_panenan_new"
                android:layout_width="110dp"
                android:layout_height="34dp"
                android:layout_alignBaseline="@+id/jumlah_panenan_text_new"
                android:layout_alignBottom="@+id/jumlah_panenan_text_new"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@+id/thumbnail_path_new"
                android:layout_toRightOf="@+id/thumbnail_path_new"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:text="Ayam Kampung Organik M"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/price_panenan_new"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_panenan_new"
                android:layout_alignStart="@+id/item_panenan_new"
                android:layout_below="@+id/item_panenan_new"
                android:layout_marginTop="13dp"
                android:text="Rp 109.000"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/jumlah_panenan_text_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grade_panenan_new"
                android:layout_centerHorizontal="true"
                android:text="Jumlah"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/minus_aksi_panenan_new"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/price_panenan_new"
                android:layout_alignLeft="@+id/item_panenan_new"
                android:layout_alignStart="@+id/item_panenan_new"
                android:layout_marginLeft="98dp"
                android:layout_marginStart="98dp"
                android:background="@drawable/button_gray"
                android:onClick="onClick"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/input_panenan_quantity_new"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/minus_aksi_panenan_new"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_gray"
                android:inputType="number"
                android:padding="6dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/plus_aksi_panenan_new"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/input_panenan_quantity_new"
                android:layout_toEndOf="@+id/input_panenan_quantity_new"
                android:layout_toRightOf="@+id/input_panenan_quantity_new"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:background="@drawable/button_green"
                android:onClick="onClick"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/satuan_panenan_new"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ket_tambahan_panenan_new"
                android:layout_alignLeft="@+id/ket_tambahan_panenan_new"
                android:layout_alignRight="@+id/ket_tambahan_panenan_new"
                android:layout_alignStart="@+id/ket_tambahan_panenan_new"
                android:layout_below="@+id/item_panenan_new"
                android:gravity="center"
                android:text="/ekor"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ket_tambahan_panenan_new"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_panenan_new"
                android:layout_alignBottom="@+id/price_panenan_new"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="(900-1150 Gram)"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/thumbnail_path_new"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/satuan_panenan_new"
                android:gravity="center"
                android:text="(900-1150 Gram)"
                android:textSize="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/petaniBarangId_new"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qtyDipesan_new"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>